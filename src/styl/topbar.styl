.topbar
  position fixed
  top 0
  z-index 9999
  width 100%
  height 63px
  background-color #3a3a3a
  box-shadow 0 2px 4px -1px rgba(0, 0, 0, 0.25)

  :first-child
    max-width 1110px
    margin 0px auto
    position center

    h3
      display none

.menu-left
  float left
  padding 11px 0 0
  cursor pointer
  height 52px

  i
    color #bdc3c7

  &:hover
    background-color #2a2a2a

    ul
      display block

.menu-right
  float right
  padding 16px 0 0
  cursor pointer
  height 47px
  margin 0 5px

  &:hover ul
    display block

  div
    float right
    padding 8px
    background-color #f6cf17

    .dropdown
      margin-top 20px

    &:hover
      background-color #eedd66

  div a
    font-size 13px
    padding-left 6px


.dropdown
  background-color #fff
  display none
  border-radius 0 0 4px 4px
  border 1px solid #e4e4e4

  a
    text-decoration none
    color #474a54

  li
    color #474a54
    display block

    &:hover
      background-color #eee

    i
      color #474a54
      margin-right 10px

.dropdown#ddleft
  margin-top 12px
  padding 10px 0 4px

  li
    padding 10px 20px 10px 10px

  i
    padding 0 10px 0 5px

.dropdown#ddvers
  margin-top 47px
  padding 10px 0

  li
    padding 10px 5px

.dropdown#ddlang
  width 150px
  padding 10px 5px 5px
  margin 47px 0 0 -130px
  position absolute
  width 150px

  li
    display inline

    img
      vertical-align middle
      height 20px

.active
  background-color #f6cf17

.controls
    cursor pointer
    display block
    padding-top 20px

    li
      color #bdc3c7
      display inline
      margin 0 5px
      font-size 18px
      float right

    a
      color #f6cf17
      text-decoration none

      &:hover
        color #bdc3c7

.lights
  float right
  background-color #f6cf17
  margin-left 4px
