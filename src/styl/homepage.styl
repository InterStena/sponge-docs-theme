.homepage
  background #f3f2f0 none repeat scroll 0 0

  .search-navbar
    margin 0 auto
    padding 12px 0 0
    width 50%

  .landing
    background #ffffff none repeat scroll 0 0
    border-bottom 3px solid #dddddd
    margin 80px auto 22px
    max-width 1100px
    padding 40px 10px 20px

    &.four-oh-four
      height 450px
      padding-top 50px

    h1
      margin-top 0
      font-size 2.5em

    .search-wrapper
      width 60%
      margin-left 20%
      margin-top 18px

      &.four-oh-four
        margin-bottom 12px

  .row
    center(1080px)

    &.center
      text-align center

  .search
    position relative
    width 100%
    background-color #fafafa

    .field
      width 80%
      font-size 16px

    .submit
      font-size 16px
      float right
      width 10%

  .langs
    text-align center
    margin 40px auto

    .lang
      col(31/128)
      text-align center
      margin-bottom 20px
      text-decoration none
      color #2980b9
      img
        width 48px
        height 48px

.langs-old

  .langslist
    padding 0 50px

  :last-child
    padding-bottom 50px

  h2
    text-align center

  a
    width 36px
    text-align center
    margin 0 8px
    text-decoration none
    color #2980b9
    float left

    img
      width 36px
      height 36px
