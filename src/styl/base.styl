html
  font-family Helvetica, sans-serif
  font-size 14px
  color #474a54

body
  background #f3f2f0
  margin 0

:target:before
    content ""
    display block
    height 65px
    margin -65px 0 0

.container
  center(1080px)
  background #fff
  border-bottom 3px solid #e4e4e4
  padding 10px 20px 20px
  margin 80px auto 20px

  a
    color #2980B9
    text-decoration none

    &:visited
      //color #9B59B6
      color #2980B9

.breadcrumbs
  width 100%
  padding 0 0 5px 8px
  border-bottom 1px solid #e4e4e4

  ul
    display block
    padding 0

  ul li
    display inline

  i
    margin 0 0 0 5px
    display inline

div.document
  column(2/3)
  line-height 1.7em
  visibility hidden

div.sphinxsidebarwrapper
  padding 8px

div.sphinxsidebar
  margin-left 0
  margin-right 0 !important
  font-size 13px
  line-height 1.5em
  column(1/3)


  ul
    margin 0
    padding 0
    list-style none !important

    ul
      margin 0 0 0 12px


  .toctree-l2
    display none

  li.current

    &>a
      font-weight bold

  .toctree-l1.current
    display list-item

    & .toctree-l2
      display list-item

  h3
  h4
    margin 8px 0

.footer
  cf()
  clear both
  padding-top 16px
  font-size 12px
  border-top 1px solid #e4e4e4

p
  margin 0 0 10px 0

.highlight
  border none
  border-left-width 4px
  border-left-style solid
  margin-bottom 10px
  font-family 'Source Code Pro', monospace

  pre
    font-family 'Source Code Pro', monospace
    white-space pre-wrap
    white-space -moz-pre-wrap
    white-space -pre-wrap
    white-space -o-pre-wrap
    word-wrap break-word

pre
  padding 12px
  font-size 13px
  line-height normal
  border-radius 4px
  margin 0

.docutils.literal
  background-color #f5f5f5
  font-size 13px
  padding 4px
  border-radius 2px
